<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.raqs_ordinario">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RAQS_ORDINARIO"
        tools:targetApi="31" >

        <!-- Actividad principal (MainActivity) -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para el registro (RegistroActivity) -->
        <activity android:name=".RegistroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>


        <!-- Actividad para mostrar categorías (MainActivity2) -->
        <activity android:name=".MainActivity2" />

        <!-- Actividades para las categorías -->
        <activity android:name=".MonitoresActivity" />
        <activity android:name=".TecladosActivity" />
        <activity android:name=".SillasActivity" />

        <!-- Otras actividades -->
        <activity android:name=".InfoActivity" />
        <activity android:name=".PagosActivity" />

    </application>

</manifest>