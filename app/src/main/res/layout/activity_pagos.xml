<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PagosActivity">

    <TextView
        android:id="@+id/carritoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos en el carrito:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/carritoTextView"
        android:layout_marginTop="16dp"
        android:text="Total a pagar: $0.00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pagarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalTextView"
        android:layout_marginTop="32dp"
        android:text="Pagar"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pagarButton"
        android:layout_marginTop="16dp"
        android:text="Regresar"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
